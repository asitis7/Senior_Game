            );
            
            // íŒì—… ì°¨ë‹¨ í™•ì¸
            if (!nextGameWindow || nextGameWindow.closed || typeof nextGameWindow.closed == 'undefined') {
                alert(`íŒì—…ì´ ì°¨ë‹¨ë˜ì—ˆìŠµë‹ˆë‹¤!\n\në¸Œë¼ìš°ì € ì„¤ì •ì—ì„œ íŒì—…ì„ í—ˆìš©í•˜ê±°ë‚˜,\nì•„ë˜ ì£¼ì†Œë¥¼ ìƒˆ íƒ­ì—ì„œ ì§ì ‘ ì—´ì–´ì£¼ì„¸ìš”:\n\n${nextGameUrl}`);
