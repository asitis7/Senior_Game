    <script>
        let currentGame = 1; // 1: 1~25, 2: 26~50
        let startTime;
        let game1StartTime;
        let game1Time = 0;
        let game2Time = 0;
        let expectedNumber = 1;
        let gameStarted = false;
        let nextGameWindow = null;

        function startGame() {
            currentGame = 1;
            game1StartTime = Date.now();
            startNumberGame();
        }

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        function startNumberGame() {
            let numbers, title, instruction;
            
            if (currentGame === 1) {
                numbers = Array.from({length: 25}, (_, i) => i + 1);
                title = "1ë‹¨ê³„: 1~25 ìˆ«ì í´ë¦­";
                instruction = "1ë¶€í„° 25ê¹Œì§€ ìˆœì„œëŒ€ë¡œ í´ë¦­í•˜ì„¸ìš”!";
                expectedNumber = 1;
            } else {
                numbers = Array.from({length: 25}, (_, i) => i + 26);
                title = "2ë‹¨ê³„: 26~50 ìˆ«ì í´ë¦­";
                instruction = "26ë¶€í„° 50ê¹Œì§€ ìˆœì„œëŒ€ë¡œ í´ë¦­í•˜ì„¸ìš”!";
                expectedNumber = 26;
            }
            
            shuffleArray(numbers);
            
            const content = `
                <div class="difficulty-badge">ğŸ”¢ ìˆ«ì ìˆœì„œ ê²Œì„</div>
                <div class="game-subtitle">${title}</div>
                <div class="timer" id="timer">ì‹œê°„ ì¸¡ì • ì¤‘...</div>
                <div class="progress-indicator">
                    ${instruction}<br>
                    ë‹¤ìŒ í´ë¦­í•  ìˆ«ì: <span style="color: #6c5ce7; font-size: 1.2em;">${expectedNumber}</span>
                </div>
                <div class="grid-5x5">
                    ${numbers.map((num, index) => `
                        <button class="grid-cell" id="cell-${index}" onclick="clickNumber(${num}, ${index})">${num}</button>
                    `).join('')}
                </div>
            `;
            
            document.getElementById('game-content').innerHTML = content;
            startTime = Date.now();
            startTimer();
            gameStarted = true;
        }

        function clickNumber(num, cellIndex) {
            if (!gameStarted) return;
            
            if (num === expectedNumber) {
                document.getElementById(`cell-${cellIndex}`).classList.add('clicked');
                expectedNumber++;
                
                // ì§„í–‰ ìƒí™© ì—…ë°ì´íŠ¸
                updateProgress();
                
                const maxNum = currentGame === 1 ? 25 : 50;
                if (expectedNumber > maxNum) {
                    const endTime = Date.now();
                    const timeTaken = Math.floor((endTime - startTime) / 1000);
                    
                    if (currentGame === 1) {
                        game1Time = timeTaken;
                        setTimeout(() => {
                            currentGame = 2;
                            startNumberGame();
                        }, 1000);
                    } else {
                        game2Time = timeTaken;
                        gameStarted = false;
                        showResult();
                    }
                }
            }
        }

        function updateProgress() {
            const progressElement = document.querySelector('.progress-indicator');
            if (progressElement) {
                const instruction = currentGame === 1 ? 
                    "1ë¶€í„° 25ê¹Œì§€ ìˆœì„œëŒ€ë¡œ í´ë¦­í•˜ì„¸ìš”!" : 
                    "26ë¶€í„° 50ê¹Œì§€ ìˆœì„œëŒ€ë¡œ í´ë¦­í•˜ì„¸ìš”!";
                const maxNum = currentGame === 1 ? 25 : 50;
                
                if (expectedNumber <= maxNum) {
                    progressElement.innerHTML = `
                        ${instruction}<br>
                        ë‹¤ìŒ í´ë¦­í•  ìˆ«ì: <span style="color: #6c5ce7; font-size: 1.2em;">${expectedNumber}</span>
                    `;
                }
            }
        }

        function startTimer() {
            const timerElement = document.getElementById('timer');
            let seconds = 0;
            
            const interval = setInterval(() => {
                if (!gameStarted && currentGame > 2) {
                    clearInterval(interval);
                    return;
                }
                
                seconds++;
                const mins = Math.floor(seconds / 60);
                const secs = seconds % 60;
                timerElement.textContent = `${mins}:${secs.toString().padStart(2, '0')}`;
                
                if (currentGame === 2 && expectedNumber > 50) {
                    clearInterval(interval);
                }
            }, 1000);
        }

        function showResult() {
            const totalTime = game1Time + game2Time;
            let message = '';
            let resultClass = '';
            
            if (totalTime <= 60) {
                message = 'ì •ë§ ì˜í–ˆì–´ìš”!';
                resultClass = 'result-excellent';
            } else if (totalTime <= 90) {
                message = 'ì˜í–ˆì–´ìš”! ë‹¤ìŒì—ëŠ” ì¡°ê¸ˆ ë¹¨ë¦¬!';
                resultClass = 'result-good';
            } else if (totalTime <= 120) {
                message = 'í‰ë²”í•´ìš”! ë‹¤ìŒì—ëŠ” ì¡°ê¸ˆ ë¹¨ë¦¬!';
                resultClass = 'result-average';
            } else {
                message = 'ì˜¤ëŠ˜ ì»¨ë””ì…˜ì´ ì¢‹ì§€ ì•Šìœ¼ì‹ ê°€ë´ìš”. ë‹¤ìŒì—ëŠ” ì¡°ê¸ˆ ë¹¨ë¦¬!';
                resultClass = 'result-poor';
            }
            
            const content = `
                <div class="difficulty-badge">ğŸ”¢ ìˆ«ì ìˆœì„œ ê²Œì„</div>
                <div class="game-subtitle">ê²Œì„ ì™„ë£Œ!</div>
                <div class="result-message ${resultClass}">${message}</div>
                
                <div class="stage-complete">
                    <h3>ğŸ‰ For Senior 2-1 ì™„ë£Œ ğŸ‰</h3>
                    <div class="stage-time-display">
                        1ë²ˆ ê²Œì„ (1~25): ${game1Time}ì´ˆ<br>
                        2ë²ˆ ê²Œì„ (26~50): ${game2Time}ì´ˆ<br>
                        <strong>ì´ ì‹œê°„: ${totalTime}ì´ˆ</strong>
                    </div>
                </div>
                
                <div class="result-summary">
                    <div class="result-stats">
                        <div class="stat-item">
                            <div class="stat-label">1ë‹¨ê³„ ì‹œê°„</div>
                            <div class="stat-value">${game1Time}ì´ˆ</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">2ë‹¨ê³„ ì‹œê°„</div>
                            <div class="stat-value">${game2Time}ì´ˆ</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">ì´ ì‹œê°„</div>
                            <div class="stat-value">${totalTime}ì´ˆ</div>
                        </div>
                    </div>
                    
                    <div style="text-align: left; margin-top: 20px;">
                        <h4 style="margin-bottom: 15px; color: #2d3436;">ğŸ“Š ì„±ê³¼ ë¶„ì„</h4>
                        <div style="background: white; padding: 15px; border-radius: 10px; margin: 10px 0;">
                            <strong>âœ… ì™„ë£Œí•œ ì‘ì—…:</strong><br>
                            â€¢ 1~25 ìˆ«ì ìˆœì„œëŒ€ë¡œ í´ë¦­ ì™„ë£Œ<br>
                            â€¢ 26~50 ìˆ«ì ìˆœì„œëŒ€ë¡œ í´ë¦­ ì™„ë£Œ<br>
                            â€¢ ì´ 50ê°œì˜ ìˆ«ìë¥¼ ì •í™•í•œ ìˆœì„œë¡œ ì²˜ë¦¬
                        </div>
                        <div style="background: white; padding: 15px; border-radius: 10px; margin: 10px 0;">
                            <strong>ğŸ§  í–¥ìƒëœ ëŠ¥ë ¥:</strong><br>
                            â€¢ ì‹œê°ì  íƒìƒ‰ ëŠ¥ë ¥<br>
                            â€¢ ìˆœì°¨ì  ì‚¬ê³ ë ¥<br>
                            â€¢ ì§‘ì¤‘ë ¥ê³¼ ì¸ë‚´ì‹¬
                        </div>
                    </div>
                </div>

                <div class="next-stage-info">
                    <h3>ğŸš€ ë‹¤ìŒ ë‹¨ê³„ ì¤€ë¹„!</h3>
                    <p>For Senior 2-2 ê²Œì„ì´ ìƒˆ ì°½ì—ì„œ ì—´ë¦½ë‹ˆë‹¤.<br>
                    ë” ë„ì „ì ì¸ ë‘ë‡Œ í›ˆë ¨ì´ ê¸°ë‹¤ë¦¬ê³  ìˆì–´ìš”!</p>
                </div>
                
                <div class="button-group">
                    <button class="next-game-btn" onclick="goToNextGame()">ğŸ® ë‹¤ìŒ ê²Œì„ (2-2)</button>
                    <button class="submit-btn" onclick="restartGame()">ğŸ”„ 2-1 ë‹¤ì‹œ í•˜ê¸°</button>
                </div>
            `;
            
            document.getElementById('game-content').innerHTML = content;
        }

        function goToNextGame() {
            const nextGameUrl = 'https://asitis7.github.io/Senior_Game/Senior_02_02.html';
            
            // ìƒˆ ì°½ì—ì„œ ë‹¤ìŒ ê²Œì„ ì—´ê¸°
            nextGameWindow = window.open(
